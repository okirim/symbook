{% extends 'base.html.twig' %}

{% block title %}{{ conference }}{% endblock %}

{% block body %}
    <style>
        body{
            background: #e3e3e3;
        }
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

    </style>

    <div class="example-wrapper">
       <h2 style="color:#fff;background:#343131;border-radius:10px;padding:20px 40px;">{{ conference }} conference</h2>
       {% if comments|length >0 %}
           <h3>Commentaires :</h3>
           <hr />
           {% for comment in comments %}
               <div style="font-family: cursive;color:blueviolet">{{ comment.author}} :</div>
               <p>{{ comment.text}}</p>
               <hr />
           {% endfor %}
        {% endif %}
    </div>
{% endblock %}
